import { sanityClient } from '@/lib/sanity.client'
import { groq } from 'next-sanity'
import { PortableText } from '@portabletext/react'
import Navbar from '@/app/components/Navbar'
import Footer from '@/app/components/Footer'
import Link from 'next/link'

// GROQ query to fetch data for homepage
const query = groq`{
  "about": *[_type == "about"][0],
  "academics": *[_type == "academics"] | order(order asc),
  "projects": *[_type == "project"] | order(order asc)[0...3],
  "allProjects": *[_type == "project"] | order(order asc),
  "cocurriculars": *[_type == "cocurricular"] | order(order asc),
  "testimonials": *[_type == "testimonial" && approved == true] | order(_createdAt desc)[0...3],
  "resumeURL": *[_type == "resume"][0].resumeFile.asset->url
}`

// Define TypeScript types for our data
interface SanityData {
  about: any;
  academics: any[];
  projects: any[];
  allProjects: any[];
  cocurriculars: any[];
  testimonials: any[];
  resumeURL: string | null;
}

export default async function Home() {
  const data: SanityData = await sanityClient.fetch(query)

  // Extract unique tech skills from all projects
  const allTechSkills: string[] = data.allProjects?.reduce((skills: string[], project: any) => {
    if (project.techStack && Array.isArray(project.techStack)) {
      const validSkills = project.techStack.filter((skill: any) => typeof skill === 'string') as string[]
      return [...skills, ...validSkills]
    }
    return skills
  }, [] as string[]) || []
  
  const uniqueSkills: string[] = [...new Set(allTechSkills)]
  
