  const categorizeSkills = (skills: string[]) => {
    const frontend = skills.filter(skill => 
      /react|next|vue|angular|html|css|tailwind|javascript|typescript|jquery/i.test(skill)
    )
    const backend = skills.filter(skill => 
      /node|python|express|django|flask|api|server|database|sql|mongodb|postgres/i.test(skill)
    )
    const tools = skills.filter(skill => 
      /git|github|docker|aws|vercel|netlify|figma|vscode|linux|bash/i.test(skill)
    )
    const others = skills.filter(skill => 
      !frontend.includes(skill) && !backend.includes(skill) && !tools.includes(skill)
    )
    
    return { frontend, backend, tools, others }
  }
  
